<!DOCTYPE html>
<html>
<head>
  <title>PETadoption</title>
  <%= stylesheet_link_tag    "default" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
	<% if user_signed_in? %>
		<%= render 'shared/user_navbar' %>
	<% else %>
		<%= render 'shared/visitor_navbar' %>
	<% end %>
	</header>

	<div id="content">
		<% if notice.present? %>
			<p id="notice"><%= notice %></p>
		<% end %>
		<% if alert.present? %>
			<p id="alert"><%= alert %></p>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>
