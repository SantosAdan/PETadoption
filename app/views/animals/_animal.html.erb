<div class="row">
    <div class="col-sm-offset-3 col-sm-4">
        <ul class="list-group">
                <div class="list-group-item">
                    <h4><%= link_to animal.name, animal %> <%= t'.owner_html', owner: animal.usuario.nome_completo %></h4>
                    <div>
                        <% if animal.picture.url != nil %>
                            <img src="<%= animal.picture.url %>" class="img-circle img-responsive" />
                        <% end %><br />
                    </div>
                    <div><p>Esp√©cie: 
		              <% if animal.specie == "D" %>
			             Cachorro
		              <% else %>
			             Gato
	                  <% end %>
                    </p></div>
                    
                    <% if belongs_to_user(animal) %>
                    <ul class="container">
                        <li class="btn"><%= link_to t('.edit'), edit_animal_path(animal), class: 'btn btn-primary' %></li>
                        <li class="btn"><%= link_to t('.destroy'), animal_path(animal), class: 'btn btn-danger', method: :delete, data: {confirm: t('dialogs.destroy')}  %></li>
                    </ul>
                    <% end %>
                    <% if !belongs_to_user(animal) %>
                    <li class="btn"><%= link_to "Adotar", send_mail_animal_path(animal, current_user), class: 'btn btn-success' %></li>
                    
                    <% end %>
                </div>
        </ul>
    </div>
</div>