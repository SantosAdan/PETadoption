<% if @usuario_session.errors.has_key? :base %>
	<div class="error_explanation col-lg-offset-2 col-lg-8 alert alert_danger fade in">
		<%= @usuario_session.errors[:base].join(', ') %>
	</div>
<% end %>

<div class="row">
<div class="container col-lg-offset-2 col-lg-8 text-center">
	<div class="jumbotron">
        <h2><%= t '.title' %></h2>
        
        <div class="row">
            <%= form_for(@usuario_session, html: {class: 'form-horizontal'}) do |f| %>
                <div class="field form-group">
                    <div class="col-lg-6 col-lg-offset-3">
                        <%= f.text_field :email, class: 'form-control', :placeholder => 'Email' %>
                            <font color="red"><%= error_tag @usuario_session, :email %></font>
                    </div>
                </div>
                <div class="field form-group">
                    <div class="col-lg-6 col-lg-offset-3">
                        <%= f.password_field :password, class: 'form-control', :placeholder => 'Senha' %>
                            <font color="red"><%= error_tag @usuario_session, :password %></font>
                    </div>
                </div>
                <div class="actions form-group">
                    <div class="col-lg-offset-5 col-lg-2">
                        <%= f.submit nil, class: 'btn btn-success'%><br /><br />
                    </div>
                </div>

                <div class="col-lg-8 col-lg-offser-4 text-center">
                    <small>Ainda n√£o faz parte do PETadoption?</small> 
                    <%= link_to t('.sign_up'), new_usuario_path, class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
        
    </div>
</div>
</div>
